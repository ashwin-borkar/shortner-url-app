<h1>Pages#home</h1>

<%= simple_form_for @shortlink, remote: true do |f| %>
  <div class="d-flex align-items-center justify-content-center m-3">
    <div class="form-title-h2">Enter the url</div>
  </div>
  <%= f.input :original, placeholder: "URL" , label: false %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.button :submit, 'Create Shortlink',  class: "btn btn-primary" %>
<% end %>
<ul>
	<% @shortlinks.each do |link| %>
		<li><%= link.url  %> - <%= link.original  %> - <%= @helpers.clicks(link.url) %></li>
	<% end %>
</ul>
<% if user_signed_in? %>
	<%= button_to 'logout', destroy_user_session_path, method: :delete%>
<% end %>

